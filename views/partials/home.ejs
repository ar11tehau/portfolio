<section class="min-h-screen flex flex-col justify-center items-center text-cyan-400 dark:text-cyan-400 p-3"
    id="<%- data.home.id %>">
    <div class="flex flex-col flex-wrap max-w-6xl text-l text-justify items-center justify-around grow lg:text-xl">
        <div class="flex flex-col lg:flex-row items-center p-3 ">
            <div class="flex h-28 w-28 rounded-full overflow-hidden lg:h-80 lg:w-fit lg:rounded-lg lg:flex-none">
                <img class="h-44 lg:h-80 max-w-fit" src="<%= data.about.content.image.src %>"
                    alt="<%= data.about.content.image.alt %>">
            </div>

            <div class="flex flex-col w-fit items-center">
                <h1 class="text-3xl lg:text-6xl font-extrabold text-cyan-400 dark:text-cyan-400 bg-black/80 m-3">
                    <%- data.home.name %>
                </h1>
                <h3 class="text-xl lg:text-3xl font-extrabold text-cyan-400 dark:text-cyan-400 bg-black/80 lg:m-3 italic">
                    <%- data.home.job %>
                </h3>
            </div>
        </div>
        <% data.about.content.paragraphs.forEach(paragraph=> { %>
            <p class="indent-8 bg-black/80">
                <%- paragraph.text %>
            </p>
            <% }) %>
                <div class="flex flex-row flex-wrap w-full max-w-2xl justify-around lg:flex-nowrap lg:my-3">
                    <% data.about.content.links.forEach(link=> { %>
                        <a class="flex items-center p-1 no-underline" href="<%= link.href %>" target="_blank">
                            <img class="h-8 w-8 rounded-full mr-3 bg-white" src="<%= link.icon.src %>"
                                alt="<%= link.icon.alt %>"><%- link.text %>
                        </a>
                    <% }) %>
                        <a class="flex items-center p-1 no-underline"
                            href="<%- data.home.cv.href %>" target="_blank">
                            <img class="h-8 w-8 rounded-full mr-3" src="<%- data.home.cv.src %>"
                                alt="<%- data.home.cv.alt %>" /><%- data.home.cv.title %>
                        </a>
                </div>
    </div>
    <%- include('arrow', { id: 'arrow_button' }) %>
</section>